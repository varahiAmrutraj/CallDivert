@{
    ViewBag.Title = "Call Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Person Wise Call Log Details</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Call, Messages Log</a></li>
            <li class="active">Person Wise Call Log Details</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Calls Diverted from User X (Number 9087654321)</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="callLogTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Call Time</th>
                                    <th>Status</th>
                                    <th>Call Diverted</th>
                                    <th>Diverted to Number</th>
                                    <th>Diverted to Person</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2023-06-20 09:30 AM</td>
                                    <td>Connected</td>
                                    <td>Yes</td>
                                    <td>9876543210</td>
                                    <td>Jane Smith</td>
                                </tr>
                                <tr>
                                    <td>2023-06-20 10:15 AM</td>
                                    <td>Missed</td>
                                    <td>No</td>
                                    <td>-</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>2023-06-20 11:45 AM</td>
                                    <td>Connected</td>
                                    <td>Yes</td>
                                    <td>1234567890</td>
                                    <td>John Doe</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#callLogTable').DataTable();
        });
    </script>
}
