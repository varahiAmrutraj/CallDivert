@{
    ViewBag.Title = "Messages Log Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Messages Log Details</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Messages Log</a></li>
            <li class="active">Messages Log Details</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Messages Log for User X (Number 9087654321)</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="smsLogTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Diverted to Number</th>
                                    <th>Received Time</th>
                                    <th>Text</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1234567890</td>
                                    <td>2023-06-20 09:30 AM</td>
                                    <td>Sample Messages 1</td>
                                </tr>
                                <tr>
                                    <td>1234567890</td>
                                    <td>2023-06-20 10:15 AM</td>
                                    <td>Sample Messages 2</td>
                                </tr>
                                <tr>
                                    <td>1234567890</td>
                                    <td>2023-06-20 11:45 AM</td>
                                    <td>Sample Messages 3</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#smsLogTable').DataTable();
        });
    </script>
}
